<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ifua.pu.mathmaps.core.User" table="USER">
        <id name="userId" type="int">
            <column name="USER_ID" precision="5" scale="0" />
            <generator class="assigned" />
        </id>
        <property name="login" type="string">
            <column name="LOGIN" length="20" not-null="true" />
        </property>
        <property name="email" type="string">
            <column name="EMAIL" length="20" not-null="true" />
        </property>
        <property name="password" type="string">
            <column name="PASSWORD" length="20" not-null="true" />
        </property>
        <property name="name" type="string">
            <column name="NAME" length="35" not-null="false" />
        </property>
    </class>
</hibernate-mapping>